class Solution {
  public:
 
    bool detectLoop(Node* head) {
        if (head == nullptr || head->next == nullptr) {
            return false; // No loop possible
        }
        
        Node* slow = head;
        Node* fast = head;
        

        while (fast != nullptr && fast->next != nullptr) {
            slow = slow->next;
            fast = fast->next->next;
            
             if (slow == fast) {
                return true;
            }
        }
        
        return false; // No loop found
    }
};
